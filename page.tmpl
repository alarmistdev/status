<!DOCTYPE html>
<html>
<head>
    <title>{{.Title}}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css">
    <style>
        :root {
            --bg-color: #f5f5f5;
            --text-color: #2d2d2d;
            --accent-color: #0066cc;
            --success-color: #2e7d32;
            --error-color: #c62828;
            --warning-color: #f57c00;
            --border-color: #e0e0e0;
        }

        body {
            font-family: 'JetBrains Mono', 'Fira Code', 'Consolas', monospace;
            line-height: 1.6;
            margin: 0;
            padding: 20px;
            color: var(--text-color);
            background-color: var(--bg-color);
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
        }

        .header {
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid var(--border-color);
            padding-bottom: 10px;
        }

        .header h1 {
            color: var(--accent-color);
            font-size: 1.8em;
            margin: 0;
        }

        .build-info {
            font-size: 0.9em;
            color: #666;
            font-style: italic;
        }

        .nav-links {
            margin-bottom: 20px;
            display: flex;
            gap: 15px;
        }

        .nav-links a {
            color: var(--accent-color);
            text-decoration: none;
            padding: 5px 10px;
            border: 1px solid var(--border-color);
            border-radius: 4px;
            transition: all 0.2s ease;
        }

        .nav-links a:hover {
            background-color: var(--accent-color);
            color: var(--bg-color);
        }

        .status-section {
            padding: 0;
            margin-bottom: 20px;
        }

        .status-section h1 {
            color: var(--accent-color);
            font-size: 1.4em;
            margin: 0 0 20px 0;
            padding: 0;
            border: none;
        }

        .group-section {
            margin-bottom: 30px;
        }

        .ungrouped-section {
            margin-bottom: 30px;
        }

        .group-title {
            color: var(--accent-color);
            font-size: 1.3em;
            margin: 0 0 15px 0;
            padding: 0;
            border-bottom: 2px solid var(--border-color);
            padding-bottom: 10px;
        }

        .status-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 15px;
        }

        .status-item {
            border: 1px solid var(--border-color);
            padding: 15px;
            border-radius: 4px;
            background-color: white;
            display: flex;
            align-items: flex-start;
            gap: 15px;
            justify-content: space-between;
        }

        .status-item .icon {
            font-size: 2em;
            color: var(--accent-color);
            order: 2;
        }

        .status-item .content {
            flex: 1;
            order: 1;
        }

        .status-item h3 {
            color: var(--accent-color);
            margin: 0 0 10px 0;
            font-size: 1.1em;
        }

        .status-item p {
            margin: 5px 0;
            font-size: 0.9em;
        }

        .status-item.ok {
            border-left: 4px solid var(--success-color);
        }

        .status-item.fail {
            border-left: 4px solid var(--error-color);
        }

        .status-item.warning {
            border-left: 4px solid var(--warning-color);
        }

        .status-item strong {
            color: var(--accent-color);
        }

        .status-item .error {
            color: var(--error-color);
        }

        .status-item .duration {
            color: #666;
            font-style: italic;
        }

        .conclusion.ok {
            color: var(--success-color);
        }

        .conclusion.fail {
            color: var(--error-color);
        }

        .conclusion.warning {
            color: var(--warning-color);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>{{.Title}} / <span class="conclusion {{if eq .Conclusion "Ok"}}ok{{else if eq .Conclusion "Warning"}}warning{{else}}fail{{end}}">{{if eq .Conclusion "Ok"}}Good{{else if eq .Conclusion "Warning"}}Not Great, Not Terrible{{else}}Not Good{{end}}</span></h1>
            {{if .Version}}
            <div class="build-info">
                [{{.Version}}]
            </div>
            {{end}}
        </div>

        {{if .Links}}
        <div class="nav-links">
            {{range .Links}}
            <a href="{{.URL}}">{{.Name}}</a>
            {{end}}
        </div>
        {{end}}

        {{if or .HealthResults .HealthGroups}}
        <div class="status-section">
            {{if .HealthResults}}
            <div class="ungrouped-section">
                <div class="status-grid">
                    {{range .HealthResults}}
                    <div class="status-item {{if eq .Status "ok"}}ok{{else if eq .Target.Importance "low"}}warning{{else}}fail{{end}}">
                        {{if .Target.Icon}}
                        <i class="{{.Target.Icon}} icon"></i>
                        {{end}}
                        <div class="content">
                            <h3>{{.Target.Name}}</h3>
                            <p>Status: <strong>{{.Status}}</strong></p>
                            {{if .ErrorMessage}}
                            <p class="error">{{if eq .Target.Importance "low"}}Warning: {{else}}Error: {{end}}{{.ErrorMessage}}</p>
                            {{end}}
                            {{if .Duration}}
                            <p class="duration">Response time: {{.Duration}}</p>
                            {{end}}
                        </div>
                    </div>
                    {{end}}
                </div>
            </div>
            {{end}}

            {{if .HealthGroups}}
            {{range .HealthGroups}}
            <div class="group-section">
                <h2 class="group-title">{{.Name}}</h2>
                <div class="status-grid">
                    {{range .Results}}
                    <div class="status-item {{if eq .Status "ok"}}ok{{else if eq .Target.Importance "low"}}warning{{else}}fail{{end}}">
                        {{if .Target.Icon}}
                        <i class="{{.Target.Icon}} icon"></i>
                        {{end}}
                        <div class="content">
                            <h3>{{.Target.Name}}</h3>
                            <p>Status: <strong>{{.Status}}</strong></p>
                            {{if .ErrorMessage}}
                            <p class="error">{{if eq .Target.Importance "low"}}Warning: {{else}}Error: {{end}}{{.ErrorMessage}}</p>
                            {{end}}
                            {{if .Duration}}
                            <p class="duration">Response time: {{.Duration}}</p>
                            {{end}}
                        </div>
                    </div>
                    {{end}}
                </div>
            </div>
            {{end}}
            {{end}}
        </div>
        {{end}}
    </div>
</body>
</html>
